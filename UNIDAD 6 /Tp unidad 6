# 1 
def imprimir_hola_mundo():
    print("Hola Mundo!")

imprimir_hola_mundo()

# 2 

def saludar_usuario(nombre):
    return f"Hola {nombre}!"

nombre = input("Ingrese su nombre: ")
print(saludar_usuario(nombre))

# 3 

def informacion_personal(nombre, apellido, edad, residencia):
    print(f"Soy {nombre} {apellido}, tengo {edad} años y vivo en {residencia}")

nombre = input("Nombre: ")
apellido = input("Apellido: ")
edad = input("Edad: ")
residencia = input("Residencia: ")

informacion_personal(nombre, apellido, edad, residencia)

#4

def calcular_area_circulo(radio):
    PI = 3.14159
    return PI * (radio ** 2)

def calcular_perimetro_circulo(radio):
    PI = 3.14159
    return 2 * PI * radio

radio = float(input("Ingrese el radio: "))
print("Área:", calcular_area_circulo(radio))
print("Perímetro:", calcular_perimetro_circulo(radio))

# 5 
def segundos_a_horas(segundos):
    return segundos / 3600

seg = int(input("Ingrese los segundos: "))
print("Horas:", segundos_a_horas(seg))

# 6 
def tabla_multiplicar(numero):
    for i in range(1, 11):
        print(numero, "x", i, "=", numero*i)

num = int(input("Ingrese un número: "))
tabla_multiplicar(num)

# 7
def operaciones_basicas(a, b):
    suma = a + b
    resta = a - b
    multi = a * b
    division = a / b
    return (suma, resta, multi, division)

a = float(input("A: "))
b = float(input("B: "))

resultados = operaciones_basicas(a, b)
print("Suma:", resultados[0])
print("Resta:", resultados[1])
print("Multiplicación:", resultados[2])
print("División:", resultados[3])

# 8
def calcular_imc(peso, altura):
    return peso / (altura ** 2)

peso = float(input("Peso (kg): "))
altura = float(input("Altura (m): "))

print(f"IMC: {calcular_imc(peso, altura):.2f}")

# 9 
def celsius_a_fahrenheit(celsius):
    return (celsius * 9/5) + 32

c = float(input("Temperatura en °C: "))
print("Fahrenheit:", celsius_a_fahrenheit(c))

# 10
def calcular_promedio(a, b, c):
    return (a+b+c)/3

a = float(input("A: "))
b = float(input("B: "))
c = float(input("C: "))

print("Promedio:", calcular_promedio(a, b, c))
